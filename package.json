{
    "name": "avi-checker",
    "version": "1.2.0",
    "description": "Aplicación para revisión de stock en AVI",
    "main": "src/index.js",
    "scripts": {
        "dev": "cross-env NODE_ENV=development electron src/index.js",
        "lint": "standard",
        "test": "echo \"Error: no test specified\" && exit 1",
        "start": "electron-forge start",
        "package-mac": "electron-forge package --platform=darwin --arch=x64",
        "package-win": "electron-forge package --platform=win32 --arch=ia32",
        "package-linux": "electron-forge package --platform=linux --arch=x64",
        "make": "electron-forge make",
        "dist": "electron-builder"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "cross-env": "^7.0.2",
        "electron-compile": "^6.4.4",
        "electron-debug": "^3.1.0",
        "electron-dl": "^3.0.2",
        "electron-squirrel-startup": "^1.0.0",
        "standard": "^16.0.1",
        "xlsx": "^0.17.0"
    },
    "devDependencies": {
        "clean-css": ">=4.2.3",
        "constantinople": ">=4.0.1",
        "cryptiles": ">=4.1.3",
        "devtron": "^1.4.0",
        "electron-forge": "^5.2.4",
        "electron-prebuilt-compile": "8.2.0",
        "electron-winstaller": "^4.0.1",
        "electron-builder": "^22.9.1",
        "hoek": ">=6.1.3",
        "mem": ">=8.0.0"
    },
    "build": {
        "appId": "avi-checker",
        "productName": "AVI Checker",
        "win": {
            "target": "nsis",
            "icon": "src/assets/icons/main-icon.ico"
        }
    },
    "config": {
        "forge": {
            "make_targets": {
                "win32": [
                    "squirrel"
                ],
                "darwin": [
                    "zip"
                ],
                "linux": [
                    "deb",
                    "rpm"
                ]
            },
            "electronPackagerConfig": {
                "asar": true,
                "packageManager": "npm",
                "icon": "src/assets/icons/main-icon"
            },
            "electronWinstallerConfig": {
                "name": "avi-checker"
            },
            "electronInstallerDebian": {},
            "electronInstallerRedhat": {},
            "github_repository": {
                "owner": "",
                "name": ""
            },
            "windowsStoreConfig": {
                "packageName": "",
                "name": "avi-checker"
            }
        }
    }
}
